            @*product-photo 产品照片*@
            <section class="product-photo">
                <figure class="photo-view">
                    @*<img class="product_img"/>*@
                    <img src="img/ill_prod1.png" />
                    @*<img src="<%=MainImage %>" alt="" />*@
                </figure>
            </section>
            @*product-info 產品資訊*@
