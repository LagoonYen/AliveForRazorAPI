<article class="page product">
    <div class="content-con">
        @*path 路径*@
        <section class="path">
            <a href="/">HOME</a>
            <a asp-page="category" asp-route-category="@Model.cardInfo.Category" asp-route-subCategory="">@Model.cardInfo.Category</a>
