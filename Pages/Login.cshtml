@page
@model AliveStoreTemplate.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
<article class="page RegisterLoginPage">
    <div class="container">
        <div class="row">
            <div class="col-8">
                <div class="ui center aligned basic segment">
                    <div class="ui left icon action input">
                        <div class="column">
                        <div class="ui form">
                            <div class="field">
                                <label>Username</label>
                                <div class="ui left icon input">
                                    <input type="text" identifier="accountLogin" placeholder="請輸入信箱">
                                    <i class="user icon"></i>
                                </div>
                            </div>
                            <div class="field">
                                <label>Password</label>
                                <div class="ui left icon input">
                                    <input type="password" identifier="passwordLogin">
                                    <i class="lock icon"></i>
                                </div>
                            </div>
                            <div class="ui blue submit button">登錄</div>
                            </div>
                        </div>
                    </div>
                    <div class="ui horizontal divider">
                        <font style="vertical-align: inherit;">
                            <font style="vertical-align: inherit;">
                                或者
                            </font>
                        </font>
                    </div>
                    <div class="middle aligned column">
                        <div class="ui big button">
                            <i class="signup icon" asp-page="./Register"></i>
                            註冊
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</article>

